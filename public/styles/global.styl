body
    font-family helvetica
    font-family 'Lato-Regular'
    text-align center
    background url(/images/background.png) no-repeat center center fixed;
    -webkit-background-size cover;
    -moz-background-size cover;
    -o-background-size cover;
    background-size cover;
h1, h1 input
    font-family Grandstander
    font-size 36px
h1 input
    width 100px
    height 50px
    line-height 50px
form input, form textarea
    display block
    margin 5px auto
    width 150px
    height 30px
    font-size 24px
.login-form, .signup-form
    font-family 'Lato-Regular'
    font-size 24px
    position absolute
    width 50%
.login-form
    right 0
.signup-form
    left 0
.icon
    height 20px
    width 20px
    background-color green
    display inline-block
@font-face
    font-family 'Grandstander'
    src url('/fonts/Grandstander-clean.ttf')
@font-face
    font-family 'Lato-Regular'
    src url('/fonts/Lato-Regular.ttf')
#auth-modal, #new-post-modal
    height: 620px
    position absolute
    left 200px
    right 200px
    padding 10px
    display none
    background-color white
    z-index 1
#auth-modal-backdrop, #new-post-modal-backdrop
    background-color rgba(0, 0, 0, 0.8)
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    display none
#current-user, #current-post
    display none
.post-list-item
    padding-top 5px
    position relative
    text-decoration none
    color black
    width 500px
    min-height 100px
    display block
    background linear-gradient(30deg, #05aa8b, #9bddd0);
    margin 10px auto
    z-index 0
    border-style solid
    border-width 2px
    border-radius 8px
    color white
.single-post
    padding-top 5px
    position relative
    text-decoration none
    color black
    width 500px
    min-height 100px
    display block
    background linear-gradient(30deg, #05aa8b, #9bddd0);
    margin 10px auto
    z-index 0
    border-style solid
    border-width 2px 2px 1px 2px
    border-radius 8px 8px 0px 0px
    margin-bottom 0px
.votes
    top 25px
    left 15px
    position absolute
    &.upvoted
        .upvote
            background-image url('/images/upvote_colored.png')
    &.downvoted
        .downvote
            background-image url('/images/downvote_colored.png')
    .upvote
        background-image url('/images/upvote_bw.png')
    .downvote
        background-image url('/images/downvote_bw.png')
    .upvote, .downvote
        background-size contain
        background-repeat no-repeat
        width 30px
        height 15px

.desc-panel
    margin-bottom: 10px;
    margin-top: 0px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    width: 496px;
    background-color: #fff;
    border-style: solid;
    border-width: 1px 2px 2px 2px;
    border-radius: 0px 0px 8px 8px;
    border-color: white grey grey;

.give-me-padding
    padding 7px
    height 20px
    margin-bottom 0
    margin-left 15px

#logo-auth-modal
    text-align center
    font-family 'Lato-Regular'
    font-size 24px
    width 80%
    margin-left auto
    margin-right auto
#logo-auth-modal-img
    width 60px
    display inline-block
    margin-top 20px
button, input
    background-color white
    border-style solid 1px
    border-color black
    border-radius 3px
#signup-submit-button, #login-submit-button
    width 157px
    height 50px


form#post-idea
    display inline-block
input#main-input
    float left
input#main-input
    vertical-align top
    margin-left 5px
    width 300px
    height 40px
    padding-left 8px
input#submit-button-post-idea
    font-family 'Lato-Regular'
    vertical-align top
    margin-left 5px
    width 46px
    height 46px
    line-height 20px
    border-radius 23px
div#new-post
    margin-bottom 30px
span#main-title
    height 50px
    margin-bottom 15px
    vertical-align bottom
    padding-top 5px
    padding-bottom 15px
    background: -webkit-gradient(
       linear,
       left top, right bottom,
       from(#43a629),
       to(#d2f5ca)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: black;
img#main-logo
    width 50px
    display inline-block
    vertical-align bottom

a
    text-decoration none
    color black
.comment-icons
    div
        width 50px
        height 50px
        background-size contain
        background-repeat no-repeat
    .comments
        background-image url('/images/comment_bw.png')
        &.selected
            background-image url('/images/comment_colored.png')
    .they-have
        background-image url('/images/checkmark_bw.png')
        &.selected
            background-image url('/images/checkmark_colored.png')
    .can-make
        background-image url('/images/exclamation_bw.png')
        &.selected
            background-image url('/images/exclamation_colored.png')
#logged-in-as
    font-size 18px
#login-wrapper, #loggedin-wrapper
    width 100%
#log-elements-wrapper
    width 800px
    margin-left auto
    margin-right auto
#elements-wrapper
    text-align right
#align-center
    text-align center
.idea-wrapper
    text-align left
    padding-top 0
    padding-bottom 0
.invisible-spacer
    display inline-block
    width 54px
    height 92px
.display-inline-block
    display inline-block
.idea-wrapper-wrapper
    vertical-align top
    padding-top 5px
    padding-left 5px
    width 420px
    overflow hidden
h2
    padding-top 7px
    font-family 'Grandstander'
    margin-top 0
    margin-bottom 0
    color white
.idea-desc
    font-size 18px
    color white
.icons-wrapper
    background-color rgba(255, 255, 255, 0.6)
    border-radius 4px 4px 0px 0px
    position absolute
    bottom 0
    right 0
    z-index 1.5
    margin-right 8px
    height 22px
    padding 5px
.little-icon
    &.comm
        width 22px
    &.check
        width 22px
    &.excla
        width 12px
.comment-count
    font-family 'Grandstander'
    font-size 17px
    color white
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: black;
.username-wrapper
    position absolute
    bottom 0
    z-index 1.5
    height 22px
    padding 5px
    padding-left 0px
    font-family 'Grandstander'
    font-size 17px
    color white
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: black;
.make-me-black
    color black
.make-me-white
    color white
